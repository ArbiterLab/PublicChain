<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center"
            card_view:cardCornerRadius="4dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Open campaign"
                        android:textColor="@color/brightColor"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/brightColor" />

                    <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/brightColor"
                        android:hint="name"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />

                    <EditText
                        android:id="@+id/descEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/brightColor"
                        android:hint="description"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />


                    <EditText
                        android:id="@+id/goalOfSignEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/brightColor"
                        android:hint="goal of signature"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />

                    <Button
                        android:id="@+id/attachImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/brightColor"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="attach image"
                        android:textColor="@color/colorPrimaryDark" />

                    <CheckBox
                        android:id="@+id/fundCampaignCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="campaign include funding factor"
                        android:textColor="@color/brightColor"
                        android:theme="@style/WhiteCheck" />

                    <EditText
                        android:id="@+id/goalOfFundEditText"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/brightColor"
                        android:hint="goal of contribution (ETH)"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/confirmButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/brightColor"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="confirm"
                        android:textColor="@color/colorPrimaryDark" />
                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</layout>